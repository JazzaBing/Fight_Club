<body>
  <div id="mainPage" class="centered">
    <button onclick="showMembersPage()">Members</button>
  </div>

  <div id="membersPage" class="centered">
    <h1>Members Page</h1>
    <button onclick="showMainPage()">Back</button>
  </div>

  <script>
    function showMembersPage() {
      document.getElementById('mainPage').style.display = 'none';
      document.getElementById('membersPage').style.display = 'flex';
    }
    function showMainPage() {
      document.getElementById('membersPage').style.display = 'none';
      document.getElementById('mainPage').style.display = 'flex';
    }
  </script>
</body>
